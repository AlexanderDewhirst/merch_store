<div class='d-flex justify-content-center'>
    <% if product.photo %>
        <%= image_tag product.photo.image_url, class: 'card-img-top' %>
    <% else %>
        <%= image_pack_tag 'default_image.jpg', class: 'card-img-top' %>
    <% end %>
</div>
<div class="d-flex mt-3 justify-content-center">
    <p>
        <%= product.description %>
    </p>
</div>
<div class='d-flex mt-3 justify-content-between'>
    <button type="button" id="close_modal" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <%= link_to "Add to Cart", purchases_product_orders_path(product), method: :post, class: 'btn btn-success' %>
</div>